{
    ":root": {
        "--background-image": "url('https://github.com/jos9260/images/blob/main/0t1rMGm.jpeg')",
        "--background-blur": "5px",
        "--background-darkness": "0.6",
        "--background-position": "center/cover !important"
    },
    "@keyframes stars": {
        "from": {
            "--background-position": "0 0"
        },
        "to": {
            "--background-position": "100vw 100vh"
        }
    },
    "#app-mount::after": {
        "content": "\"\"",
        "position": "fixed",
        "top": "0",
        "left": "0",
        "width": "100%",
        "height": "100%",
        "background": "url('https://github.com/jos9260/images/blob/main/6bdccae21431d581155680db26c26253-ezgif.com-gif-maker.gif')",
        "opacity": 0.5,
        "animation": "stars 60s linear infinite",
        "z-index": -1,
        "pointer-events": "none"
    }
}
